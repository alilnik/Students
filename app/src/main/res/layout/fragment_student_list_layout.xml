<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.Guideline
        android:id="@+id/fragment_stud_list_guidline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/fragment_stud_list_tv_stud"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:text="Student"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/fragment_stud_list_guidline"/>
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:padding="2dp"
        android:text="Group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/fragment_stud_list_guidline"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/students_recycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_stud_list_tv_stud"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


    </android.support.v7.widget.RecyclerView>
    

</android.support.constraint.ConstraintLayout>