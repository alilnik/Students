<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/student_list_row_gdl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/stud_list_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/student_list_row_gdl"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/stud_list_row_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/student_list_row_gdl"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24dp"/>


</android.support.constraint.ConstraintLayout>