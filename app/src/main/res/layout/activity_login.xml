<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inno.ilyadmt.students.Activities.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:hint="Login" />

        <EditText
            android:id="@+id/home_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:layout_weight="0.23"
            android:orientation="horizontal">

            <Button
                android:id="@+id/home_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:onClick="login"
                android:text="Login" />

            <Button
                android:id="@+id/home_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/home_name"
                android:layout_alignTop="@+id/home_name"
                android:layout_toEndOf="@+id/home_name"
                android:layout_toRightOf="@+id/home_name"
                android:layout_weight="1"
                android:onClick="register"
                android:text="Register" />

        </LinearLayout>

    </LinearLayout>

</android.widget.RelativeLayout>
